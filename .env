# ===========================================
#   CONFIGURATION OANDA (Trading & Data)
# ===========================================

# Token API OANDA :
# (clé générée depuis ton compte OANDA → "Manage API Access")
# Exemple de format : "9e18f48cc7a9b9a43b6c5c23e9d..."
OANDA_API_TOKEN="TON_TOKEN_OANDA_ICI"

# ID du compte OANDA :
# Format typique : "101-001-12345678-001"
OANDA_ACCOUNT_ID="TON_ACCOUNT_ID_ICI"

# Environnement :
#   - "practice"  → compte démo
#   - "live"      → compte réel
OANDA_ENV="practice"
# Timeout HTTP pour OANDA (en secondes)
OANDA_TIMEOUT=30


# ===========================================
#   OPTIONS FACULTATIVES
# ===========================================

# Logging (niveau de verbosité : DEBUG / INFO / WARNING / ERROR)
LOG_LEVEL="INFO"


